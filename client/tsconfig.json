{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "./src/**/*",
    "./src/declarations.d.ts"
],
  "exclude": ["node_modules", "dist"]
}
